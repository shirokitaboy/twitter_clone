<h1>つぶやき一覧</h1>
<p><%= notice %></p>

<table align="center">
<% @tweets.each do |tweet| %>
  <tr class="table_content">
    <td><%= tweet.content %></td>
  </tr>
  <tr class="table_botom">
    <td><%= link_to '詳細', twtr_path(tweet.id), class: 'btn btn-default' %></td>
    <%#一覧表示から見えなくする条件分岐 %>
    <% if tweet.user_id == current_user.id %>
    <td><%= link_to "編集", edit_twtr_path(tweet.id), class: 'btn btn-info'  %></td>
    <td><%= link_to '削除', twtr_path(tweet.id), method: :delete,data: { confirm: '本当に削除しますか?' }, class: 'btn btn-danger' %></td>
    <% end %>
  </tr>
<% end %>
</table>

<%= link_to '一覧画面リロード', twtrs_path %>

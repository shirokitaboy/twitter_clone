<h3>以下の内容で、送信する。</h3>

<%= form_with(model: @tweet, url: twtrs_path, local: true) do |form| %>
  <%= form.hidden_field :image_cache %>
  <%= form.hidden_field :content %>
  <p>img:<br><%= image_tag(@tweet.image) %></p>
  <p>本文:<%= @tweet.content %></p>
  <button type="submit" class="btn btn-primary">登録する</button>
<% end %>

<%= form_with(model: @tweet, url: new_twtr_path, local: true, method: 'get') do |form| %>
  <%= form.hidden_field :content %>
  <button type="submit" class="btn btn-default">戻る</button>
<% end %>
